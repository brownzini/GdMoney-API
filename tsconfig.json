{
  "compilerOptions": {
      "target": "es5",
      "typeRoots" : ["./src/types", "./node_modules/@types"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "baseUrl": "./src",
      "paths": {
          "@modules/*": ["modules/*"],
          "@config/*": ["config/*"],
          "@shared/*": ["shared/*"],
          "@errors/*": ["errors/*"],
          "@utils/*": ["utils/*"]
      },
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
  }
}